{
  "name": "DevOps Lab",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y nginx tree python3-pip",
  "forwardPorts": [80, 3000, 8080],
  "portsAttributes": {
    "80":   { "label": "nginx" },
    "3000": { "label": "app"   },
    "8080": { "label": "python http.server" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode.gitlens",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
